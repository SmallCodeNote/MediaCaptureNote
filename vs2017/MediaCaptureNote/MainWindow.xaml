<Window x:Name="MainWindow1" x:Class="MediaCaptureNote.MainWindow"
        Loaded="Window_Loaded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Capture" Height="500" Width="800">
    <DockPanel HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" LastChildFill="True"  >
        <StackPanel VerticalAlignment="Stretch"  Width="100" DockPanel.Dock="Right">
            <Button Content="Capture" Width="100" Height="30" Click="CaptureButton_Click" VerticalAlignment="Top"/>
            <ComboBox x:Name="comboBox_Devices" SelectionChanged="ComboBox_Devices_SelectionChanged"/>
        </StackPanel>
        <Image x:Name="cameraPreview" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" DockPanel.Dock="Left"/>

    </DockPanel>

</Window>
